<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.infinum.ldevgoodies">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CardViewActivity" />
        <activity
            android:name=".activities.ToolbarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.JobSchedulerActivity" />
        <activity android:name=".activities.ScreenPinningActivity" />

        <service
            android:name=".services.DemoJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>
